### Name: RPMforge RPM Repository for RHEL {{ ansible_distribution_major_version }} - dag
### URL: http://rpmforge.net/
[rpmforge]
name = RHEL $releasever - RPMforge.net - dag
baseurl = http://apt.sw.be/redhat/el{{ ansible_distribution_major_version }}/en/$basearch/rpmforge
mirrorlist = http://mirrorlist.repoforge.org/el{{ ansible_distribution_major_version }}/mirrors-rpmforge
#mirrorlist = file:///etc/yum.repos.d/mirrors-rpmforge
{% if rpmforge_repos.rpmforge is defined %}
{%   if rpmforge_repos.rpmforge %}
enabled = 1
{%   else %}
enabled = 0
{%   endif %}
{% else %}
enabled = 0
{% endif %}
protect = 0
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-rpmforge-dag
gpgcheck = 1

